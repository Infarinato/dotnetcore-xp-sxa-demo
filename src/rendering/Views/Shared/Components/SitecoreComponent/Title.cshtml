@model aspnet_core_demodotcomsite.Models.Title.Title

<div class="component title @Model.Styles @Model.GridParameters" id="@Model.Id">
    <div class="component-content">
        <div class="field-title">
            @if (Model.IsEditing)
            {
                <span asp-for="@Model.Text"></span>
            }
            else
            {
                <a href="@Model.Link.Value.Anchor">@Model.Text.Value</a>
            }
        </div>
    </div>
</div>