@using aspnet_core_demodotcomsite.Views.Shared.Components.BlazorComponent
@model aspnet_core_demodotcomsite.Models.Container

@if (Model.OutputContainerWrapper)
{
    @Html.Raw("<div class=\"container-wrapper\">")
}

<div class="component container-default @Model.GridParameters @Model.Styles" style="@Model.BackgroundStyle" id="@Model.Id">
    <div class="component-content">
        <div class="row">
            <sc-placeholder name="container-{*}" ></sc-placeholder>
        </div>
    </div>
</div>

@if (Model.OutputContainerWrapper)
{
    @Html.Raw("</div>")
}

<div class="component container-default @Model.GridParameters @Model.Styles" style="@Model.BackgroundStyle" id="@Model.Id">
    <div class="component-content">
        <div class="row">
            <component type="typeof(Weather)" render-mode="Static" />
        </div>
    </div>
</div>